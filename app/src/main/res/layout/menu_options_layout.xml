<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toggle_button"
    android:layout_width="match_parent"
    android:layout_height="280sp"
    android:background="@drawable/fade_layout"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:padding="10sp"
    >

    <!--   Options Row     -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="114sp"
            android:layout_height="90sp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/amount_dashboard_bg"
            >
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:src="?attr/account_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accounts"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="114sp"
            android:layout_height="90sp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/amount_dashboard_bg"
            >
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:src="?attr/card_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cards"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="114sp"
            android:layout_height="90sp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/amount_dashboard_bg"
            >
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:src="?attr/payment_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payments"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

    </LinearLayout>


    <!--   Options Row     -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        >
        <LinearLayout
            android:layout_width="114sp"
            android:layout_height="90sp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/amount_dashboard_bg"
            >
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:src="?attr/scan_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABA Scan"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="114sp"
            android:layout_height="90sp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/amount_dashboard_bg"
            >
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:src="?attr/favorite_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="favorites"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="114sp"
            android:layout_height="90sp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:background="@drawable/amount_dashboard_bg"
            >
            <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:src="?attr/transfer_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfers"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

    </LinearLayout>


    <!-- Options Row   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B6B6B4"
        android:layout_marginTop="10dp"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="1sp"
                android:padding="10dp"
                android:background="@drawable/amount_dashboard_bg"
                >
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:src="?attr/goverment_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goverment Services"
                    android:layout_marginLeft="5sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:background="@drawable/amount_dashboard_bg"
                >
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:src="?attr/e_cash_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-Cash"
                    android:layout_marginLeft="5sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:background="@drawable/amount_dashboard_bg"
                >
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:src="?attr/service_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:layout_marginLeft="5sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:background="@drawable/amount_dashboard_bg"
                >
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:src="?attr/new_account_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Accounts"
                    android:layout_marginLeft="5sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:background="@drawable/amount_dashboard_bg"
                >
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:src="?attr/schedule_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Schedules"
                    android:layout_marginLeft="5sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:background="@drawable/amount_dashboard_bg"
                >
                <ImageView
                    android:layout_width="40sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:src="?attr/inv_friend_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invite Friends"
                    android:layout_marginLeft="5sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>